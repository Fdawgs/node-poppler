root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Prettier will use these settings
end_of_line = lf
indent_style = tab
indent_size = 4
max_line_length = 80

[*.{css,html,scss}]
max_line_length = 120

[*.{yaml,yml}]
indent_style = space

[test/{fixtures,__snapshots__}/**]
charset = unset
end_of_line = unset
indent_size = unset
indent_style = unset
insert_final_newline = unset
max_line_length = unset
trim_trailing_whitespace = unset
