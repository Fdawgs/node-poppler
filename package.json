{
	"name": "node-poppler",
	"version": "1.8.4",
	"description": "Asynchronous node.js wrapper for the Poppler PDF rendering library",
	"keywords": [
		"async",
		"pdf",
		"pdf-converter",
		"pdf-to-html",
		"pdf-to-image",
		"poppler"
	],
	"main": "src/index.js",
	"repository": "git+https://github.com/Fdawgs/node-poppler.git",
	"author": "Frazer Smith",
	"license": "MIT",
	"engines": {
		"node": ">=10.22.0"
	},
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"doc": "jsdoc2md src/index.js > API.md && prettier API.md --write",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint . --cache --ext js,jsx,ts,tsx --ignore-path .gitignore",
		"prettier": "prettier . --write --ignore-path .gitignore",
		"test": "yarn lint && yarn test-only",
		"test-coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
		"test-only": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand"
	},
	"jest": {
		"clearMocks": true,
		"testEnvironment": "node",
		"testTimeout": 10000
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^11.0.0",
		"conventional-changelog-cli": "^2.1.0",
		"coveralls": "^3.1.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.11.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jest": "^24.1.0",
		"eslint-plugin-jsdoc": "^30.6.5",
		"eslint-plugin-json": "^2.1.2",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-security": "^1.4.0",
		"glob": "^7.1.6",
		"jest": "^26.5.3",
		"jsdoc-to-markdown": "^6.0.1",
		"jsinspect": "^0.12.7",
		"prettier": "2.1.2"
	}
}
